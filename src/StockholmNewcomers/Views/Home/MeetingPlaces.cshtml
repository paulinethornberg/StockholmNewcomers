@model MeetingPlacesVM[]


<div class="row column">
    <hr>
</div>
<div class="row column">
    <p class="lead">Browse meetingplaces near you: </p>
</div>
<div class="row small-up-2 large-up-4">">
    @foreach (var meetingPlace in Model)
    {
            <div class="column">
                <div class="callout">
                    @if (meetingPlace.Logo != null)
                    {
                        <p><img src="~/Images/Illustrations/@meetingPlace.Logo" /></p>
                    }
                    else
                    {
                        <p><img src="~/Images/Illustrations/people.jpg"></p>
                    }
                    <p><b>@meetingPlace.Name</b></p>
                    <p class="subheader">@meetingPlace.Summary</p>
                    <p>tags</p>
                </div>
            </div>
        }

</div>
<div class="row column">
    <a class="button hollow expanded">Load More</a>
</div>

<scripts>
    <script src="~/js/vendor/jquery.js"></script>
    <link href="~/css/app.css" rel="stylesheet" />
    <link href="~/css/foundation.css" rel="stylesheet" />
    <script src="~/js/vendor/foundation.js"></script>
    <script src="~/js/app.js"></script>
</scripts>