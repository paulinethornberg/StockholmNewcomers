<div class="panel m-panel shadow">
    <div class="row collapse">
        <div class="small-12 columns">
            <header class="form-header">
                <h3>
                    <small>Suggest a new organisation to add to Stockholm for Newcomers! </small>
                </h3>
            </header>
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns">
            <form method="post" action="AddOrganisation">
                <div class="row">
                    <div class="small-4 columns">
                        <p class="notice">
                            Name
                        </p>
                    </div>
                    <div class="small-8 columns">
                        <div class="form-group-material PaOU">
                            <label class="material-label" for="name">Name</label><input name="Name" class="material-field" id="nameform" required="required" type="text">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="small-4 columns">
                        <p class="notice">
                            Summary (max xxx characters)
                        </p>
                    </div>
                    <div class="small-8 columns">
                        <div class="form-group-material">
                            <label class="material-label" for="summary">Summary</label><input name="Summary" class="material-field" id="sumform" required="required" type="text">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="small-4 columns">
                        <p class="notice">
                            Description (long)
                        </p>
                    </div>
                    <div class="small-8 columns">
                        <div class="form-group-material">
                            <label class="material-label" for="Description">Description</label><textarea name="Description" class="material-field" id="descriptionform" required="required" type="text"></textarea>
                        </div>
                    </div>
                </div>
                @*<div class="row">
                    <div class="small-4 columns">
                        <p class="notice">
                            Input with an error
                        </p>
                    </div>
                    <div class="small-8 columns">
                        <div class="form-group-material error">
                            <label class="material-label" for="firstname">Summary of activity/purpose (max 120 characters)</label><input class="material-field" id="firstname" type="text"><small class="error">Your firstname can't be a number.</small>
                        </div>
                    </div>
                </div>*@
                <div class="row">
                    <div class="small-4 columns">
                        <p class="notice">
                            Email
                        </p>
                    </div>
                    <div class="small-8 columns">
                        <div class="form-group-material">
                            <label class="material-label" for="email">E-mail</label><input name="Email" class="material-field" id="emailform" type="email">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="small-4 columns">
                        <p class="notice">
                            ContactInfo
                        </p>
                    </div>
                    <div class="small-8 columns">
                        <div class="row">
                            <div class="small-8 columns">
                                <div class="form-group-material">
                                    <label class="material-label" for="website">Website</label><input name="Website" class="material-field" id="websiteform" type="text">
                                </div>
                            </div>
                            <div class="small-4 columns">
                                <div class="form-group-material">
                                    <label class="material-label" for="facebook">Facebook</label><input name="Facebook" class="material-field" id="facebookform" type="text">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="small-4 columns">
                            <p class="notice">
                                Image
                            </p>
                        </div>
                        <div class="small-8 columns">
                            <div class="form-group-material">
                                <input type="file" id="uploadEditorImage" />
                            </div>
                        </div>
                    </div>
                    <h4><small>Add (max 3) tags to categorize the organisation or meeting place: </small></h4>

                    <div class="button-group">
                        @for (int i = 0; i < 26; i++)
                        {
                            <input id="@Model.Tags[i].Title" type="checkbox">
                            <label class="button" name="Tags" for="checkbox1">@Model.Tags[i].Title</label>
                        }
                    </div>

                    <div class="row">
                        <div class="small-12 small-push-4 columns">
                            <button>Send it !</button>
                        </div>
                    </div>
            </form>
     
        </div>
    </div>

    <button onclick="openPreview()" data-open="exampleModal1">Preview</button>
    <p><a data-open="exampleModal1">Preview</a></p>
    <div class="reveal" id="exampleModal1" data-reveal>
        <div class="row">
            <div class="medium-6 columns medium-push-6">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <h2 id="namePreview"></h2>
                <p id="summaryPreview">@Model.Info</p>
                <p id="emailPreview">@Model.Email</p>
                <p id="websitePreview">@Model.Website</p>
            </div>
            <div class="medium-6 columns medium-pull-6">
                <img src="~/Images/Bilder/@Model.Logo" />
            </div>
        </div>

        <div>
            <p id="descriptionPreview"></p>
        </div>
        <button class="close-button" data-close aria-label="Close modal" type="button">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

